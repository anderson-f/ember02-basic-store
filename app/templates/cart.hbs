<main class="container mt-5">
  <h1>Shopping Cart</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <LinkTo @route="index">
        Home
      </LinkTo>
    </li>
    <li class="breadcrumb-item">Shopping Cart</li>
  </ol>
  {{!-- acessando a lista que tá no service --}}
  {{#each this.cart.itemList as |item|}}
    <div class="cart-item d-flex align-items-center">
      <div class="cart-item-thumbnail">
        <img src={{item.image}} alt="">
      </div>
      <div class="ml-3">
        <h4>{{item.name}}</h4>
        <i class="class font-weight-bold">{{currency item.price}}</i>
      </div>
      {{!-- numbero de items de um produto no carrinho --}}
      <input
        type="number"
        class="ml-auto"
        value={{item.count}}
        {{!-- o segundo argumento vai ser o event --}}
        {{on "input" (fn this.updateItemCount item)}}
      >
    </div>
  {{/each}}
  <section class="w-50 ml-auto text-right mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      {{!-- usando o helper personalizado posso passar o sign="$" após o thus.subtotal --}}
      <span class="col">{{currency this.subtotal}}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{currency this.tax}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{currency this.total}}</span>
    </div>
  </section>
  <button type="button" class="btn btn-success float-right">
    Check Out
  </button>
</main>