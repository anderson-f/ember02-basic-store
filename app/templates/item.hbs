<GeneralContainer>
  <div class="product item-details-page {{if this.isZoomed 'is-zoomed'}}">
    {{!-- passando a propriedade src pro componente imagem --}}
    <Product::Image
      @src={{this.productImage}}
      @toggleZoom={{this.toggleZoom}}
    />
    {{!-- aqui estou passado como props o color que foi definido no controller do item --}}
    {{!-- passando tbm como props a função (action) que foi definida no controler do item --}}
    <Product::Details
      @isDetails={{true}}
      @name={{this.model.name}}
      @price={{this.model.price}}
      @colors={{this.model.colors}}
      @color={{this.color}}
      @onChangeColor={{this.onChangeColor}}/>

  </div>
  <h5 class="mt-5">Features</h5>
  <ul>
    {{!-- loop no template --}}
    {{#each this.model.features as |feature|}}
    <li>{{feature}}</li>
    {{/each}}
  </ul>
</GeneralContainer>